<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg_gradient">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                android:id="@+id/main_content"
                android:layout_above="@+id/sexpro_score_close"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:padding="@dimen/edittext_padding"
                    android:gravity="center_horizontal"
                    android:background="@color/update_score_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/reg_tv_textsize"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="Your Sex pro Score is"
                        android:id="@+id/reg_sexPro_score_label"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text=" 10"
                        android:id="@+id/reg_sexPro_score_value"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/reg_tv_textsize"
                    android:textColor="@color/update_score_bg"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Trigger message depending on score will go here"
                    android:id="@+id/score_message"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/information"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/information" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dialScoreImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dial_1" />

                    <FrameLayout
                        android:id="@+id/myscore_framelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sexprodial"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/sexpro_needle" />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                android:layout_above="@+id/sexpro_score_close"
                android:id="@+id/infolayout"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="24dp"
                            android:src="@drawable/diallargeblue" />
                        <TextView
                            android:id="@+id/info_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Sex Pro Score"
                            android:textColor="@color/text_color"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/info_para_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:gravity="center_horizontal"
                            android:text="Your Sex Pro score is based on the last three months of your diary entries."
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/info_para_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:gravity="center_horizontal"
                            android:text="The higher your score and the closer your needle gets to the green means higher levels of HIV protection."
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/info_para_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:gravity="center_horizontal"
                            android:text="Even with a perfect score of 20 (strongest protection), you could still become HIV infected. But it means youâ€™re doing a lot to stay protected!"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOT IT!"
                android:id="@+id/sexpro_score_close"
                android:textStyle="bold"
                android:background="@color/btn_blue"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:onClick="onSexProScoreClose" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
