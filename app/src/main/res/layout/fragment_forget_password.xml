<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <com.aptmobility.lynx.CustomTextView
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter your Email address and you'll receive an email with a new password."
                android:id="@+id/textView9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <com.aptmobility.lynx.CustomEditText
                android:background="@drawable/apptheme_edit_text_holo_light"
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/reqNewPassEmail"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:hint="Email Address" />

            <com.aptmobility.lynx.CustomButtonView
                style="@style/Phastt.button"
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Request New Password"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:id="@+id/requestNewPassword"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:onClick="requestNewPassword"/>
        </LinearLayout>
        </ScrollView>


</RelativeLayout>
