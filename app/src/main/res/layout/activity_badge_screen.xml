<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundPrimary"
    tools:context="com.lynxstudy.lynx.BadgeScreenActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@drawable/actionbar_bg"
        android:id="@+id/actionBar"
        android:layout_alignParentTop="true"
        android:layout_height="?android:attr/actionBarSize"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:id="@+id/nav_back"
            android:src="@drawable/back" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:src="@drawable/blackbook_logo"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/viewProfile"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_person_white" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar"
        android:layout_above="@+id/got_it">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp"
                android:text="YOU’VE EARNED A BADGE!"
                android:gravity="center"
                android:textColor="@color/hyperlink"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/alertText"
                android:visibility="visible" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BlackBook"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/badgeName"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You’ve completed onboarding"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/badgeDescription"
                android:textSize="@dimen/edittext_textsize"
                android:layout_marginBottom="32dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/lynx_large"
                android:layout_gravity="center"
                android:id="@+id/badgeImage"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You don't have to pat yourself on the back for taking your test.  We'll do it for you!  "
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/badgeNotes"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginBottom="48dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Earned 0 time"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:id="@+id/badgeEarnedTimes"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/input_primary"
        android:text="Got it!"
        android:textColor="@color/white"
        android:visibility="visible"
        android:id="@+id/got_it"
        android:textSize="14dp"
        android:textStyle="bold"/>
</RelativeLayout>
