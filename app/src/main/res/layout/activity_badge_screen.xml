<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/badge_orange_bg_new"
    tools:context="com.lynxstudy.lynx.BadgeScreenActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@drawable/actionbar_bg"
        android:id="@+id/actionBar"
        android:layout_alignParentTop="true"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:id="@+id/nav_back"
            android:src="@drawable/back_action" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:src="@drawable/logohorizontal"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/viewProfile"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_person_white" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionBar"
        android:layout_above="@+id/got_it">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Youâ€™ve earned a badge!"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/alertText"
                android:visibility="gone"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LYNX"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/badgeName"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed Onboarding"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/badgeDescription"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lynx_large"
                android:layout_gravity="center"
                android:id="@+id/badgeImage"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You don't have to pat yourself on the back for taking your test.  We'll do it for you!  "
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/badgeNotes"
                android:lineSpacingMultiplier="1.43"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Badge earned 0 time"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/badgeEarnedTimes"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_blue"
        android:text="Got it!"
        android:textColor="@color/white"
        android:visibility="gone"
        android:id="@+id/got_it"
        android:textSize="14sp"
        android:textStyle="bold"/>
</RelativeLayout>
