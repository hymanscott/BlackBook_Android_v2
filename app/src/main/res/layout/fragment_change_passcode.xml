<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.aptmobility.lynx.CustomTextView
        custom:fontAssetName="RobotoSlabRegular.ttf"
        android:text="Change Passcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:gravity="center_horizontal|center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/change_passcode_layout"
        android:layout_margin="10dp">
        <com.aptmobility.lynx.CustomTextView
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter New 4 Digit Passcode"/>

        <com.aptmobility.lynx.CustomEditText
            android:background="@drawable/apptheme_edit_text_holo_light"
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/newPasscode"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="Passcode"
            android:inputType="numberPassword"
            android:maxLength="4"/>
        <com.aptmobility.lynx.CustomEditText
            android:background="@drawable/apptheme_edit_text_holo_light"
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/confirmNewPasscode"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="Repeat Passcode"
            android:inputType="numberPassword"
            android:maxLength="4"/>
        <com.aptmobility.lynx.CustomButtonView
            style="@style/Phastt.button"
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/change_passcode_submit"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/phastt_button"
            android:textColor="@color/white"
            android:onClick="changePasscode"/>
    </LinearLayout>





</LinearLayout>
