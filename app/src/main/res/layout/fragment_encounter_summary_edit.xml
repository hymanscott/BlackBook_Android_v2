                            android:buttonTint="@color/white"
                            android:button="@drawable/radiobutton_white"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:text="Condom used part of the time"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/encounter_radio_btn_textsize"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:button="@drawable/radiobutton_white"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:id="@+id/whenIbottomed_CondomNotUsed"
                            android:text="Condom not used"/>
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/edittext_bg"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/cndm_whenIfucked_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When we fucked :"
                        android:textSize="@dimen/encounter_tv_textsize"
                        android:textColor="@color/white"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:id="@+id/whenIfucked_group"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/encounter_radio_btn_textsize"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:button="@drawable/radiobutton_white"
                            android:paddingLeft="12dp"
                            android:id="@+id/whenIfucked_CondomUsed"
                            android:text="Condom used"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/whenIfucked_CondomPartTime"
                            android:textSize="@dimen/encounter_radio_btn_textsize"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:button="@drawable/radiobutton_white"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:text="Condom used part of the time"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/encounter_radio_btn_textsize"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:button="@drawable/radiobutton_white"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:id="@+id/whenIfucked_CondomNotUsed"
                            android:text="Condom not used"/>
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/edittext_bg"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
