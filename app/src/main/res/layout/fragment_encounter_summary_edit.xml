                <!--Condom Usage Questions Ends -->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:id="@+id/whenIsuckedLayout"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/whenIsuckedTitle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="When I sucked"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/whenIsuckedParent"
                    android:background="@drawable/rectangle_bg">
                    <TextView
                        android:id="@+id/whenIsucked"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rectangle_edittext"
                        android:text="x"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:id="@+id/whenIbottomLayout"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="16dp">

                <TextView
                    android:id="@+id/whenIbottomTitle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="When I bottomed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
