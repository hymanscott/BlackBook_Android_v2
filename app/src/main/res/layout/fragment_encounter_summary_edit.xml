<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/encounter_bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/encounterlarge" />

            <TextView
                android:id="@+id/newEncounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Encounter Snapshot"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/encounter_summary_nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/banner_name_bg"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Nick name"
                android:textColor="@color/encounter_btn_bg"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rateSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Sex Rating :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RatingBar
                        android:id="@+id/sexType_RateTheSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="1.0"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:stepSize="0.5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_bg"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/hivStatusTitle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="HIV Status :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />

                <TextView
                    android:id="@+id/hivStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIV positive and undetectable"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectangle_bg"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/encounterNotesTitle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Encounter Notes :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />

                <EditText
                    android:id="@+id/encNotes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="Add notes about this partner"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="14sp"
                    android:maxLength="255"/>
            </LinearLayout>

            <TextView
                android:id="@+id/typeSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:text="Type of sex"
                android:textColor="@color/white"
                android:textSize="@dimen/encounter_tv_textsize" />

            <LinearLayout
                android:id="@+id/sexTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <!--Encounter Sex Types-->

            </LinearLayout>

            <LinearLayout
