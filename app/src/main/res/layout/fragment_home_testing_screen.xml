<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/home_test_screen_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aptmobility.lynx.homeScreenActivity$PlaceholderFragment">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/testing_requestTest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="@drawable/toggle_button_ornage">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imgBtn_requestTest"
                        android:src="@drawable/request_kit"
                        android:scaleType="fitXY"
                        android:background="#fff"
                        android:layout_gravity="center"/>
                    <com.aptmobility.lynx.CustomTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Request a Home Test Kit"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:id="@+id/Set_upt_profile"
                        custom:fontAssetName="RobotoSlabRegular.ttf"/>
                </TableRow>
                <TableRow
                    android:id="@+id/testing_nearestLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="@drawable/toggle_button_ornage">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imgBtn_nearestLocation"
                        android:src="@drawable/nearest_location"
                        android:scaleType="fitXY"
                        android:background="#fff"
                        android:layout_gravity="center"/>
                    <com.aptmobility.lynx.CustomTextView
                        custom:fontAssetName="RobotoSlabRegular.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="10dp"
                        android:text="Nearest Testing Location"/>
                </TableRow>
                <TableRow
                    android:id="@+id/testing_instructions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="@drawable/toggle_button_ornage">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgBtn_instructions"
                        android:src="@drawable/checkorange"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:background="#fff"
                        android:layout_gravity="center"/>
                    <com.aptmobility.lynx.CustomTextView
                        custom:fontAssetName="RobotoSlabRegular.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="10dp"
                        android:text="Testing Instructions"/>
                </TableRow>
                <TableRow
                    android:id="@+id/connectingToCare"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:background="@drawable/toggle_button_ornage">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ctocorangebg"
                        android:background="#fff"
                        android:layout_gravity="center"/>
                    <com.aptmobility.lynx.CustomTextView
                        custom:fontAssetName="RobotoSlabRegular.ttf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="10dp"
                        android:text="Connecting to care"/>
                </TableRow>
            </TableLayout>
            <com.aptmobility.lynx.CustomTextView
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:text="Testing History"
                android:gravity="center_vertical|center_horizontal" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <com.aptmobility.lynx.CustomButtonView
                    style="@style/Phastt.button"
                    custom:fontAssetName="RobotoSlabRegular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/testing_addNewHIVtest"
                    android:background="@drawable/phastt_button"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Add New HIV Test"/>
                <com.aptmobility.lynx.CustomButtonView
                    custom:fontAssetName="RobotoSlabRegular.ttf"
                    style="@style/Phastt.button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/testing_addNewSTItest"
                    android:background="@drawable/phastt_button"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Add New STD Test" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/stroke_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:fillViewport="false" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/testingHistoryTable">

                    </TableLayout>
            </RelativeLayout>
        </ScrollView>
</LinearLayout>
