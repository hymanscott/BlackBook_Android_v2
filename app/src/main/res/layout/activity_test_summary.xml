    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/bot_nav"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/starBG"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_sexpro"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_sexpro_iv"
                android:src="@drawable/icon_sexpro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_sexpro_tv"
                android:text="Sex Pro" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_diary"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_diary_iv"
                android:src="@drawable/icon_diary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_diary_tv"
                android:text="Diary" />
        </LinearLayout>

