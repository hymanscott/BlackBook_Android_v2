<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/testingHistoryTitle"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:text="HIV Test"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/testedOn"
                    android:text="Tested on:" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testingHistorydate"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:text="date" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hivLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/teststatus"
                        android:text="Test Status:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hivTestStatus"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:layout_weight="1"
                        android:text="Didn't Test" />
                </LinearLayout>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerInside"
                    android:id="@+id/hivAttachment"
                    android:layout_height="200dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/std_list_parentLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gonorrheaLayout"
                    android:background="@drawable/border_bottom"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/gonorrheaTitle"
                            android:text="Gonorrhea:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/gonorrheaStatus"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:text="Didn't Test" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerInside"
                        android:layout_height="200dp"
                        android:id="@+id/gonorrheaAttachment"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/syphilisLayout"
                    android:background="@drawable/border_bottom"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/syphilisTitle"
                            android:text="Syphilis:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/syphilisStatus"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:text="Didn't Test" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/syphilisAttachment"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chlamydiaLayout"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/chlamydiaTitle"
                            android:text="Chlamydia:" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chlamydiaStatus"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"
                            android:layout_weight="1"
                            android:text="Didn't Test" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:layout_height="200dp"
                        android:id="@+id/chlamydiaAttachment"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
