<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/border_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/trigger_person"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How does the number of anal sex partners affect my HIV risk?"
            android:textColor="@color/text_color"
            android:layout_marginLeft="24dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_gravity="center_vertical"
            android:id="@+id/question"
            android:textStyle="bold"
            android:textSize="@dimen/edittext_textsize"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The more people you have sex with, the more likely you are to have sex with someone who has a different HIV status than you. A higher number of anal sexual partners will also increase your chances of getting an STD, which can increase your risk for HIV."
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/answer"
        android:textStyle="italic"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/edittext_textsize"/>
</LinearLayout>