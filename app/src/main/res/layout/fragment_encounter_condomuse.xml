<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="NEW ENCOUNTER"
                android:id="@+id/newEncounter"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nick name"
                android:id="@+id/enc_sexType_condomUse_nickName"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/lynx_button_dark"
                android:gravity="center_vertical|center_horizontal" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/whenIsucked_layout"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="When I sucked him:"
                    android:textSize="20sp"
                    android:id="@+id/whenIsucked"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:id="@+id/whenIsucked_group"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/whenIsucked_CondomUsed"
                        android:text="Condom used"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/whenIsucked_CondomPartTime"
                        android:text="Condom used part of the time"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/whenIsucked_CondomNotUsed"
                        android:checked="true"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:text="Condom not used"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/whenItopped_layout"
                android:visibility="gone"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="When I topped:"
                    android:textSize="20sp"
                    android:id="@+id/whenItopped"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:id="@+id/whenItopped_group"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/whenItopped_CondomUsed"
                        android:text="Condom used"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/whenItopped_CondomPartTime"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:text="Condom used part of the time"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/whenItopped_CondomNotUsed"
                        android:checked="true"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:text="Condom not used"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/whenIbottomed_layout"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="When I bottomed:"
                    android:textSize="20sp"
                    android:id="@+id/whenIbottom"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:id="@+id/whenIbottomed_group"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/whenIbottomed_CondomUsed"
                        android:text="Condom used"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/whenIbottomed_CondomPartTime"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:text="Condom used part of the time"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/whenIbottomed_CondomNotUsed"
                        android:checked="true"
                        android:text="Condom not used"/>
                </RadioGroup>
