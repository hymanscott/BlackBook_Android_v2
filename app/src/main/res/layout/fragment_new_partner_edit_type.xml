<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/encounter_bg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/next"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="24dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/encounterlarge" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/AddPartnerTitle"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"
                            android:id="@+id/add_partner_title" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/edittext_bg"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="24dp" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Partner type"
                            android:textSize="@dimen/encounter_tv_textsize"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:id="@+id/partnerTypeTitle"
                            android:textColor="@color/white" />
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/newPartnerType"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="@dimen/activity_vertical_margin">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:text="Primary"
                                android:id="@+id/newPartnerPrimary" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regular"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:id="@+id/newPartnerRegular" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hook-up"
                                android:id="@+id/newPartnerCasual"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:checked="true" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NSA"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:id="@+id/newPartnerNSA" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:textColor="@color/white"
                                android:buttonTint="@color/white"
                                android:text="Friends with benefits"
                                android:id="@+id/newPartnerFriends" />
                        </RadioGroup>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginBottom="24dp"
                            android:id="@+id/partnerHaveOtherPartner_layout">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Do they have other partners ?"
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:textColor="@color/white"
                                android:id="@+id/otherPartnersTitle"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"/>
                            <RadioGroup
                                android:id="@+id/radio_partner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_marginTop="@dimen/activity_vertical_margin">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:checked="true"
                                    android:id="@+id/radio_partner_yes" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/radio_partner_no" />

                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/partnerRelationshipPeriodLayout"
                            android:layout_marginBottom="48dp"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_marginBottom="24dp" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="How long have you been with this partner in a mutually monogamous relationship? "
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:textColor="@color/white"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:id="@+id/monogamousTitle"
                                android:gravity="center_vertical"/>
                            <RadioGroup
                                android:id="@+id/radio_relationshipPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_marginTop="@dimen/activity_vertical_margin">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Less than 6 months"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:checked="true"
                                    android:id="@+id/radio_lessThanSixMonths" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6 months or more"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/radio_moreThanSixMonths" />

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/button_textsize"
                android:textColor="@color/white"
                android:onClick="changePartnerType"
                android:background="@color/encounter_btn_bg"
                android:id="@+id/next"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
