<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/userlarge" />
            <TextView
                android:id="@+id/frag_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Reminders"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/intro_first_paragraph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="We got you! During the study, we’ll send you reminders to add sexual activity to your diary and capture doxycycline use."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="@dimen/edittext_textsize" />
            <TextView
                android:id="@+id/intro_second_paragraph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="But you’re in charge – so let’s set those now"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="32dp"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/edittext_textsize" />
            <TextView
                android:id="@+id/intro_third_paragraph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(Don’t worry – you can change these whenever you want in User Settings.)"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="32dp"
                android:textSize="@dimen/edittext_textsize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <Button
                    android:id="@+id/reminderIntroNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:background="@color/btn_primary"
                    android:onClick="showDiaryReminders"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_textsize"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
