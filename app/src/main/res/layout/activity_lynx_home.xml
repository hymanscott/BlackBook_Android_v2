<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sexpro_main_parent"
    tools:context="com.lynxstudy.lynx.LynxSexPro">

    <!-- Top Navigation -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bot_nav_bg"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        app:logo="@drawable/blackbook_logo"
        app:navigationIcon="@drawable/back" />

    <!--  Dashboard Content  -->
    <!--  sexProMainContent was LinearLayout  -->
    <ScrollView
        android:id="@+id/sexProMainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_nav"
        android:layout_above="@+id/bot_nav"
        android:fillViewport="true">
        <LinearLayout
            android:paddingLeft="-2dp"
            android:paddingRight="-2dp"
            android:background="@drawable/dashboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/row_one">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/sexpro"
                    android:background="@drawable/dashboard_item">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trends_home_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trends"
                        android:textSize="20sp"
                        android:id="@+id/sexproTitle"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@color/lynx_home_white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dashboard_item"
                    android:gravity="center"
                    android:id="@+id/activity"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/insights_home_new" />

                    <TextView
                        android:id="@+id/activityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insights"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/lynx_home_white"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/row_three">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/trends"
                    android:background="@drawable/dashboard_item">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/activity_home_new"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:id="@+id/trendsTitle"
                        android:textColor="@color/lynx_home_white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/insights"
                    android:background="@drawable/dashboard_item">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/badges_home_new"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badges"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:id="@+id/insightsTitle"
                        android:textStyle="bold"
                        android:textColor="@color/lynx_home_white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bot_nav"
        android:background="@color/bot_nav_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_dashboard" />

    <!-- Log -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sexProInfoContent"
        android:visibility="gone"
        android:layout_alignParentTop="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?android:attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/diallargeblue"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sex Pro Score"
                    android:textSize="20sp"
                    android:id="@+id/info_title"
                    android:textColor="@color/text_color"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Sex Pro score is based on the last three months of your diary entries."
                    android:layout_margin="24dp"
                    android:id="@+id/info_para_one"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The higher your score and the closer your needle gets to the green means higher levels of HIV protection."
                    android:layout_marginLeft="24dp"
                    android:id="@+id/info_para_two"
                    android:layout_marginRight="24dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Even with a perfect score of 20 (strongest protection), you could still become HIV infected. But it means youâ€™re doing a lot to stay protected!"
                    android:layout_margin="24dp"
                    android:id="@+id/info_para_three"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>