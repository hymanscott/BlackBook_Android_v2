<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lynxstudy.lynx.LynxProfileEdit"
    android:background="@color/white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/actionbar_bg"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|top"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logohorizontal"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewProfile"
                    android:src="@drawable/icon_person_white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:background="@color/white"
            app:tabTextColor="@color/text_color"
            app:tabSelectedTextColor="@color/text_color"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:paddingBottom="?attr/actionBarSize"
        android:visibility="invisible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:layout_marginBottom="?android:attr/actionBarSize">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addNewTestTitle"
                android:textSize="20sp"
                android:text="Add New HIV Test"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorAccent"  />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleText"
                android:textSize="16sp"
                android:text="When was your most recent HIV test?"
                android:textColor="@color/profile_text_color"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="24dp"
                android:background="@color/profile_edittext_bg"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/calendariconblue" />

                <EditText
                    android:id="@+id/addNewTestDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/profile_edittext_bg"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="MM/DD/YYYY"
                    android:inputType="none"
                    android:textColor="@color/profile_text_color"
                    android:textColorHint="@color/profile_edittext_hint"
                    android:textCursorDrawable="@drawable/profile_edittext_cursor"
                    android:textSize="@dimen/edittext_textsize" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_border"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hivTestStatusTitle"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Is your HIV test positive? (optional)"
                    android:textSize="16sp"
                    android:id="@+id/hivPosQn"
                    android:textColor="@color/profile_text_color"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hivTestStatusRadio"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/hivTestStatus"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/profile_text_color"
                        android:buttonTint="@color/profile_text_color"
                        android:text="No"
                        android:checked="true"
                        android:id="@+id/hivTestNo"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/profile_text_color"
                        android:buttonTint="@color/profile_text_color"
                        android:layout_marginTop="4dp"
                        android:text="Yes"
                        android:id="@+id/hivTestYes" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I Didn't test"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/profile_text_color"
                        android:buttonTint="@color/profile_text_color"
                        android:id="@+id/hivTestDidntTest" />
                </RadioGroup>
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/hivTestImage"
                    android:background="@drawable/image_container"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/hivAttachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/photocamera"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/std_layout">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Were any of your STD tests positive?"
                    android:textSize="16sp"
                    android:id="@+id/stdTesPosQn"
                    android:textColor="@color/profile_text_color" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Gonorrhea"
                        android:id="@+id/gonorrheaTitle"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/profile_text_color"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/gonorrhea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/profile_text_color"
                            android:checked="true"
                            android:buttonTint="@color/profile_text_color"
                            android:text="No"
                            android:layout_marginTop="4dp"
                            android:id="@+id/gonorrheaNo"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/profile_text_color"
                            android:text="Yes"
                            android:buttonTint="@color/profile_text_color"
                            android:layout_marginTop="4dp"
                            android:id="@+id/gonorrheaYes" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I Didn't test"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/profile_text_color"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/gonorrheaDidntTest" />
                    </RadioGroup>
                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/gonorrheaImage"
                        android:background="@drawable/image_container"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/gonorrheaAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/photocamera"
                            android:layout_gravity="center"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Syphilis"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:id="@+id/syphilisTitle"
                        android:textColor="@color/profile_text_color"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/syphilis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/profile_text_color"
                            android:buttonTint="@color/profile_text_color"
                            android:text="No"
                            android:checked="true"
                            android:layout_marginTop="4dp"
                            android:id="@+id/syphilisNo" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/profile_text_color"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/syphilisYes" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I Didn't test"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/profile_text_color"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/syphilisDidntTest" />
                    </RadioGroup>
                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/syphilisImage"
                        android:background="@drawable/image_container"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/syphilisAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/photocamera"
                            android:layout_gravity="center"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Chlamydia"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:id="@+id/chlamydiaTitle"
                        android:textColor="@color/profile_text_color"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/chlamydia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="14sp"
                            android:checked="true"
                            android:layout_marginTop="4dp"
                            android:buttonTint="@color/profile_text_color"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/chlamydiaNo"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="14sp"
                            android:buttonTint="@color/profile_text_color"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/chlamydiaYes"
                            android:layout_marginTop="4dp"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I Didn't test"
                            android:textSize="14sp"
                            android:buttonTint="@color/profile_text_color"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/chlamydiaDidntTest" />
                    </RadioGroup>
                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/chlamydiaImage"
                        android:background="@drawable/image_container"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/chlamydiaAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/photocamera"
                            android:layout_gravity="center"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/addNewTestOk"
                    android:layout_gravity="right"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/buttonbluecornered"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/bot_nav"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/starBG"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_sexpro"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_sexpro_iv"
                android:src="@drawable/nav_icon_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_sexpro_tv"
                android:text="Home" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_diary"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_diary_iv"
                android:src="@drawable/nav_icon_diary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_diary_tv"
                android:text="Diary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_testing"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_testing_iv"
                android:src="@drawable/nav_icon_testing_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_testing_tv"
                android:textColor="@color/white"
                android:text="Testing" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_prep"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_prep_iv"
                android:src="@drawable/nav_icon_prep" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_prep_tv"
                android:text="PrEP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:id="@+id/bot_nav_chat"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_chat_iv"
                android:src="@drawable/nav_icon_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bot_nav_chat_tv"
                android:text="Chat" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
