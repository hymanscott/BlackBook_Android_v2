<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomNav"
                android:layout_marginBottom="5dp"
                android:layout_alignParentTop="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="32dp"
                            android:src="@drawable/encounterlarge" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:textSize="20dp"
                            android:text="@string/AddPartnerTitle"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/newEncounter" />

                        <TextView
                            android:id="@+id/enc_sexType_condomUse_nickName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:background="#E1E1E1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="JOHN DOE"
                            android:padding="12dp"
                            android:textColor="@color/dark_boxes"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/whenIsucked_layout">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="When I sucked him:"
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:id="@+id/whenIsucked"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:textColor="@color/white" />
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:id="@+id/whenIsucked_group"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIsucked_CondomUsed"
                                    android:text="Condom used"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIsucked_CondomPartTime"
                                    android:text="Condom used part of the time"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/whenIsucked_CondomNotUsed"
                                    android:checked="true"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:text="Condom not used"/>
                            </RadioGroup>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/whenItopped_layout">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="When I topped:"
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:id="@+id/whenItopped"
                                android:textColor="@color/white"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" />
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:id="@+id/whenItopped_group"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenItopped_CondomUsed"
                                    android:text="Condom used"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/whenItopped_CondomPartTime"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:text="Condom used part of the time"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/whenItopped_CondomNotUsed"
                                    android:checked="true"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:text="Condom not used"/>
                            </RadioGroup>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/whenIbottomed_layout">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="When I bottomed:"
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:id="@+id/whenIbottom"
                                android:textColor="@color/white"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"/>
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:id="@+id/whenIbottomed_group"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIbottomed_CondomUsed"
                                    android:text="Condom used"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/whenIbottomed_CondomPartTime"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:text="Condom used part of the time"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIbottomed_CondomNotUsed"
                                    android:checked="true"
                                    android:text="Condom not used"/>
                            </RadioGroup>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/whenIfucked_layout">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="When I fucked her:"
                                android:textSize="@dimen/encounter_tv_textsize"
                                android:id="@+id/whenIfucked"
                                android:textColor="@color/white"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"/>
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:id="@+id/whenIfucked_group"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIfucked_CondomUsed"
                                    android:text="Condom used"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/whenIfucked_CondomPartTime"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:text="Condom used part of the time"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/encounter_radio_btn_textsize"
                                    android:textColor="@color/white"
                                    android:buttonTint="@color/white"
                                    android:id="@+id/whenIfucked_CondomNotUsed"
                                    android:checked="true"
                                    android:text="Condom not used"/>
                            </RadioGroup>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/edittext_bg"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="24dp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomNav"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:onClick="onEncCondomUseEditNext"
                    android:background="@color/input_primary"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/next"
                    android:textSize="@dimen/button_textsize"
                    android:layout_gravity="right"
                    android:layout_centerInParent="true" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
