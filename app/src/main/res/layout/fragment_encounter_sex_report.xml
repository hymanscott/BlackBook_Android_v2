<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroundPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/encounterlarge" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="20dp"
            android:text="@string/new_encounter"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/add_partner_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input_primary"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/encounter_tv_textsize"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:id="@+id/encounter_report_title"
            android:text="Do you have any more sex to report?"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/sexReportNav"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
        android:paddingLeft="@dimen/activity_horizontal_margin_half"
        android:paddingRight="@dimen/activity_horizontal_margin_half">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onSexReportNo"
                android:background="@drawable/btn_primary_rounded"
                android:textColor="@color/white"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textSize="@dimen/button_textsize"
                android:id="@+id/no"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onSexReportYes"
                android:layout_gravity="left"
                android:background="@drawable/btn_primary_rounded"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/button_textsize"
                android:layout_weight="1"
                android:id="@+id/yes" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drugReportNav"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onDrugReportNo"
                android:background="@drawable/buttonbluecornered"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/button_textsize"
                android:id="@+id/drugNo"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onDrugReportYes"
                android:background="@drawable/buttonbluecornered"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/drugYes"
                android:textSize="@dimen/button_textsize"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_gravity="left" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
