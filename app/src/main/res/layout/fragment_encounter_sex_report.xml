<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/encounter_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/encounterlarge" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/encounter_tv_textsize"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/encounter_report_title"
            android:text="Did you have any more sex this week?"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/sexReportNav"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:onClick="onSexReportNo"
                    android:background="@color/encounter_btn_bg"
                    android:textColor="@color/white"
                    android:layout_marginRight="4dp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textSize="@dimen/button_textsize"
                    android:id="@+id/no"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:onClick="onSexReportYes"
                    android:layout_gravity="left"
                    android:background="@color/encounter_btn_bg"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/button_textsize"
                    android:layout_weight="1"
                    android:id="@+id/yes" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drugReportNav"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:onClick="onDrugReportNo"
                    android:background="@color/encounter_btn_bg"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/button_textsize"
                    android:id="@+id/drugNo"
                    android:layout_gravity="right"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:onClick="onDrugReportYes"
                    android:background="@color/encounter_btn_bg"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/drugYes"
                    android:textSize="@dimen/button_textsize"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="left" />
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
