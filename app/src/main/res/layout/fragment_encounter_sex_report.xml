<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_margin="20dp"
            android:id="@+id/encounter_report_title"
            android:text="Did you have any more sex this week?"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/sexReportNav"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onSexReportYes"
                android:layout_gravity="left"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/yes"
                android:layout_marginLeft="35dp"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onSexReportNo"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:id="@+id/no"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drugReportNav"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onDrugReportYes"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/drugYes"
                android:layout_gravity="left"
                android:layout_marginLeft="35dp"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onDrugReportNo"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/drugNo"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
