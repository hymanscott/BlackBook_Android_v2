<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/bot_nav_bg"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/bot_nav_sexpro"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_sexpro_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_home_white" />

            <TextView
                android:id="@+id/bot_nav_sexpro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_diary"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_diary_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_diary" />

            <TextView
                android:id="@+id/bot_nav_diary_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_testing"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_testing_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_testing" />

            <TextView
                android:id="@+id/bot_nav_testing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testing" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_prep"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_prep_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_prep" />

            <TextView
                android:id="@+id/bot_nav_prep_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrEP" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_chat"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_chat_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_chat" />

            <TextView
                android:id="@+id/bot_nav_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat" />
        </LinearLayout>
    </LinearLayout>
