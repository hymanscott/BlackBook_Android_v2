<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lynxstudy.lynx.SelectedEncounterSummary">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="ENCOUNTER SUMMARY"
                android:id="@+id/frag_title"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/encList_summary_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/lynx_button_dark"
                android:gravity="center_vertical|center_horizontal"
                android:text="NICK NAME"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:text="Partner:"
                    android:id="@+id/partner"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/encListSumm_partnerName"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:text="x"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:text="Sex Rating:"
                    android:id="@+id/sexRating"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="start"
                    android:paddingLeft="0dp"
                    android:id="@+id/encListSumm_sexRating"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:text="HIV Status:"
                    android:id="@+id/hivStatus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/encListSumm_hivStatus"
                    android:text="x"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_color"
                android:layout_margin="10dp"
                android:id="@+id/typeSex"
                android:text="Type of Sex:"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="I sucked him"
                    android:textOff="I sucked him"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_iSucked"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="He sucked me"
                    android:textOff="He sucked me"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_heSucked"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="I topped"
                    android:textOff="I topped"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:id="@+id/encListSumm_iTopped"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="I bottomed"
                    android:textOff="I bottomed"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_iBottomed"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="I jerked him"
                    android:textOff="I jerked him"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_iJerked"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="He jerked me"
                    android:textOff="He jerked me"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_heJerked"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="I rimmed him"
                    android:textOff="I rimmed him"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_iRimmed"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="He rimmed me"
                    android:textOff="He rimmed me"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/encListSumm_heRimmed"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp">
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="Kissing / making out"
                    android:textOff="Kissing / making out"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    android:layout_margin="10dp"
                    android:id="@+id/encListSumm_kissing"
                    android:padding="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/toggle_button"/>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:id="@+id/encListSumm_iSucked_condomuse"
                android:layout_marginTop="20dp"
                android:text="x"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/encListSumm_iTopped_condomuse"
                android:text="x"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/encListSumm_iBottomed_condomuse"
                android:text="x"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:onClick="close"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
