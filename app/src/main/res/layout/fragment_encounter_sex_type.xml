<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/next"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/encounterlarge" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="20dp"
                android:text="@string/new_encounter"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/newEncounter" />

            <TextView
                android:id="@+id/enc_sexType_nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#E1E1E1"
                android:gravity="center_vertical|center_horizontal"
                android:text="JOHN DOE"
                android:padding="12dp"
                android:textColor="@color/dark_boxes"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="How was the sex?"
                android:layout_marginBottom="24dp"
                android:id="@+id/rateSex"
                android:gravity="center_vertical|center_horizontal" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="1.0"
                android:id="@+id/sexType_RateTheSex"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:stepSize="0.5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/input_primary"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="What did yâ€™all do?"
                    android:layout_margin="10dp"
                    android:id="@+id/typeSex"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="64dp"
                android:id="@+id/sexTypeLayout">
                <!--Encounter Sex Types-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:onClick="onSexTypeNext"
        android:background="@color/input_primary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/button_textsize"
        android:id="@+id/next" />
</RelativeLayout>