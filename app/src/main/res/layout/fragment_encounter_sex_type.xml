<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <com.aptmobility.lynx.CustomTextView
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Add New Encounter"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        <com.aptmobility.lynx.CustomTextView
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nick name"
            android:layout_margin="10dp"
            android:id="@+id/enc_sexType_nickName"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/apptheme_color"
            android:gravity="center_vertical|center_horizontal" />
        <com.aptmobility.lynx.CustomTextView
            custom:fontAssetName="RobotoSlabRegular.ttf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_color"
            android:text="Rate the sex"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1.0"
            android:id="@+id/sexType_RateTheSex"
            android:layout_marginBottom="10dp"
            android:stepSize="0.5"/>
        <!--style= "@style/CustomRatingBar"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.aptmobility.lynx.CustomTextView
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/text_color"
                android:text="Type of sex"
                android:layout_margin="10dp"
                android:gravity="center_vertical|center_horizontal" />
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Kissing / making out"
                android:textOff="Kissing / making out"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:id="@+id/sexType_kissing"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/toggle_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="I sucked him"
                android:textColor="#999999"
                android:textOff="I sucked him"
                android:layout_gravity="center"
                android:id="@+id/sexType_iSucked"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="He sucked me"
                android:textOff="He sucked me"
                android:textColor="#999999"
                android:id="@+id/sexType_heSucked"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="I topped"
                android:textOff="I topped"
                android:textColor="#999999"
                android:id="@+id/sexType_iTopped"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="I bottomed"
                android:textOff="I bottomed"
                android:textColor="#999999"
                android:id="@+id/sexType_iBottomed"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="I jerked him"
                android:textOff="I jerked him"
                android:textColor="#999999"
                android:id="@+id/sexType_iJerked"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="He jerked me"
                android:textOff="He jerked me"
                android:textColor="#999999"
                android:id="@+id/sexType_heJerked"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="I rimmed him"
                android:textOff="I rimmed him"
                android:textColor="#999999"
                android:id="@+id/sexType_iRimmed"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>
            <com.aptmobility.lynx.CustomToggleButton
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="He rimmed me"
                android:textOff="He rimmed me"
                android:textColor="#999999"
                android:id="@+id/sexType_heRimmed"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/toggle_button"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp">

            <com.aptmobility.lynx.CustomButtonView
                style="@style/Phastt.button"
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revise"
                android:onClick="onSexTypePrev"
                android:background="@drawable/phastt_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="left"
                android:layout_alignParentLeft="true" />

            <com.aptmobility.lynx.CustomButtonView
                style="@style/Phastt.button"
                custom:fontAssetName="RobotoSlabRegular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:onClick="onSexTypeNext"
                android:background="@drawable/phastt_button"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>