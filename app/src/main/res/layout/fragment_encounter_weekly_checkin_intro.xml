<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/encounterlarge" />
        <TextView
            android:id="@+id/frag_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="Weekly Check-in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/intro_paragraph"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="39dp"
            android:gravity="center"
            android:text="Welcome back [enter name of user]!\nWe have a few short questions for you\nand then weâ€™ll get you on your way!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LET'S GET STARTED!"
        android:background="@color/btn_primary"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/button_top_margin"
        android:id="@+id/checkin_intro_next"
        android:textSize="@dimen/button_textsize"
        android:onClick="weeklyCheckInIntroNext"
        android:layout_alignParentBottom="true"
        android:textStyle="bold" />
</RelativeLayout>