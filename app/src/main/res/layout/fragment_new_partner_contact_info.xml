<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/next" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/encounterlarge" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="20dp"
                android:text="@string/AddPartnerTitle"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/add_partner_title" />

            <TextView
                android:id="@+id/new_partner_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1E1E1"
                android:gravity="center_vertical|center_horizontal"
                android:text="JOHN DOE"
                android:padding="12dp"
                android:textColor="@color/dark_boxes"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/contactInfoTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="What is their contact info?\n(enter as much or as little of you’d like)"
                android:textColor="@color/white"
                android:textSize="@dimen/encounter_tv_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/input_primary_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:id="@+id/emailicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/emailicon" />

                <EditText
                    android:id="@+id/newPartnerEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="Email address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/edittext_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/input_primary_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/phoneicon" />

                <EditText
                    android:id="@+id/newPartnerPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="Mobile phone number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/edittext_textsize"
                    android:windowSoftInputMode="adjustPan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/input_primary_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/cityicon" />

                <EditText
                    android:id="@+id/newPartnerCity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="City/Neighborhood"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/edittext_textsize"
                    android:windowSoftInputMode="adjustPan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/input_primary_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/texticon" />

                <EditText
                    android:id="@+id/newPartnerMetAt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="Met on/at"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/edittext_textsize"
                    android:windowSoftInputMode="adjustPan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/input_primary_rounded"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/socialicon" />

                <EditText
                    android:id="@+id/newPartnerHandle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/rectangle_edittext"
                    android:backgroundTint="@color/edittext_bg"
                    android:ems="10"
                    android:hint="Social media"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:textSize="@dimen/edittext_textsize"
                    android:windowSoftInputMode="adjustPan" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="24dp"
                android:background="@color/input_primary" />

            <TextView
                android:id="@+id/partnerTypeTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Partner type:"
                android:textColor="@color/white"
                android:textSize="@dimen/encounter_tv_textsize" />

            <RadioGroup
                android:id="@+id/newPartnerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <RadioButton
                    android:id="@+id/newPartnerPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:button="@drawable/radiobutton_white"
                    android:paddingLeft="12dp"
                    android:text="Primary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_radio_btn_textsize" />

                <RadioButton
                    android:id="@+id/newPartnerFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:button="@drawable/radiobutton_white"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Friends with benefits"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_radio_btn_textsize" />

                <RadioButton
                    android:id="@+id/newPartnerRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:button="@drawable/radiobutton_white"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_radio_btn_textsize" />

                <RadioButton
                    android:id="@+id/newPartnerCasual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:button="@drawable/radiobutton_white"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Hook-up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_radio_btn_textsize" />

                <RadioButton
                    android:id="@+id/newPartnerNSA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/white"
                    android:button="@drawable/radiobutton_white"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="One-night stand"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_radio_btn_textsize" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/partnerHaveOtherPartner_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="24dp"
                    android:background="@color/edittext_bg" />

                <TextView
                    android:id="@+id/otherPartnersTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="Do they have other partners ?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />

                <RadioGroup
                    android:id="@+id/radio_partner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <RadioButton
                        android:id="@+id/radio_partner_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:button="@drawable/radiobutton_white"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:textSize="@dimen/encounter_radio_btn_textsize" />

                    <RadioButton
                        android:id="@+id/radio_partner_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:button="@drawable/radiobutton_white"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="No"
                        android:textColor="@color/white"
                        android:textSize="@dimen/encounter_radio_btn_textsize" />
                    <RadioButton
                        android:id="@+id/radio_partner_unsure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:button="@drawable/radiobutton_white"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="I don’t know/unsure"
                        android:textColor="@color/white"
                        android:textSize="@dimen/encounter_radio_btn_textsize" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/partnerRelationshipPeriodLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="24dp"
                    android:background="@color/edittext_bg" />

                <TextView
                    android:id="@+id/monogamousTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:gravity="center_vertical"
                    android:text="How long have you been with this partner in a mutually monogamous relationship? "
                    android:textColor="@color/white"
                    android:textSize="@dimen/encounter_tv_textsize" />

                <RadioGroup
                    android:id="@+id/radio_relationshipPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <RadioButton
                        android:id="@+id/radio_lessThanSixMonths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:button="@drawable/radiobutton_white"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Less than 6 months"
                        android:textColor="@color/white"
                        android:textSize="@dimen/encounter_radio_btn_textsize" />

                    <RadioButton
                        android:id="@+id/radio_moreThanSixMonths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:button="@drawable/radiobutton_white"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="6 months or more"
                        android:textColor="@color/white"
                        android:textSize="@dimen/encounter_radio_btn_textsize" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/input_primary"
        android:onClick="onContactInfoNext"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
