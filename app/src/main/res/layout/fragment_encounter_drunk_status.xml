<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context="com.lynxstudy.lynx.EncounterDrunkStatusFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_alignParentTop="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="32dp"
                            android:src="@drawable/encounterlarge" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:textSize="20dp"
                            android:text="@string/AddPartnerTitle"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/newEncounter" />

                        <TextView
                            android:id="@+id/encounter_nickName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E1E1E1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="JOHN DOE"
                            android:padding="12dp"
                            android:textColor="@color/dark_boxes"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginBottom="32dp"
                            android:background="@color/input_primary"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="During this encounter were you:"
                            android:textColor="@color/white"
                            android:textSize="@dimen/encounter_tv_textsize"
                            android:layout_marginRight="24dp"
                            android:layout_marginLeft="24dp"
                            android:id="@+id/drunkTitle"
                            android:gravity="center_vertical"/>
                        <RadioGroup
                            android:id="@+id/RG_drunkStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24dp"
                            android:layout_marginLeft="24dp"
                            android:paddingLeft="8dp"
                            android:layout_marginTop="@dimen/activity_vertical_margin">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Drunk"
                                android:textColor="@color/white"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:buttonTint="@color/white"
                                android:button="@drawable/radiobutton_white"
                                android:paddingLeft="12dp"
                                android:id="@+id/RB_drunk" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High"
                                android:textColor="@color/white"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:buttonTint="@color/white"
                                android:button="@drawable/radiobutton_white"
                                android:paddingLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:id="@+id/RB_high" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:buttonTint="@color/white"
                                android:button="@drawable/radiobutton_white"
                                android:paddingLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:text="Both drunk and high"
                                android:id="@+id/RB_both_drunk_high" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/encounter_radio_btn_textsize"
                                android:buttonTint="@color/white"
                                android:button="@drawable/radiobutton_white"
                                android:paddingLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:text="Neither drunk nor high"
                                android:id="@+id/RB_neither_drunk_high" />
                        </RadioGroup>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:onClick="onDrunkStatusNext"
            android:textStyle="bold"
            android:id="@+id/next"
            android:textSize="@dimen/button_textsize"
            android:background="@color/input_primary"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
