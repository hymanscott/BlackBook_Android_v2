<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:id="@+id/actionBar"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/back_action"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/back_action" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:src="@drawable/logohorizontal"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/viewProfile"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_person_white" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/reg_tv_textsize"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:text="Calculated on"
                    android:id="@+id/reg_sexPro_score_label"
                    android:layout_marginBottom="26dp"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    android:background="@color/update_score_bg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score with PrEP"
                    android:textColor="@color/profile_title_text_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="26dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/pageTitle"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="26dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/border_grey"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_left"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        android:id="@+id/swipe_arrow_left"
                        android:layout_alignParentLeft="true"/>
                    <FrameLayout
                        android:id="@+id/myscore_framelayout"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/sexprodial"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/sexpro_needle" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scoreImage"
                            android:src="@drawable/score_one"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"/>
                    </FrameLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar_right"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        android:id="@+id/swipe_arrow_right"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/indicators"
                    android:layout_above="@+id/nextScreen"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:id="@+id/screen_indicator_one"
                        android:background="@drawable/dot_indicator_score_page"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:visibility="gone"
                        android:id="@+id/screen_indicator_two"
                        android:background="@drawable/dot_indicator_score_page"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="4dp"
                        android:id="@+id/screen_indicator_three"
                        android:background="@drawable/dot_indicator_score_page"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/border_grey"/>
                <TextView
                    android:id="@+id/additionalMessageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="24dp"
                    android:lineSpacingMultiplier="1.2"
                    android:gravity="center_horizontal"
                    android:text="Whatâ€™s the difference?"
                    android:textColor="@color/profile_title_text_color"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon"
                        android:src="@drawable/trigger_prep"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PrEP is the difference."
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="6dp"
                        android:lineSpacingMultiplier="1.2"
                        android:id="@+id/PrepIsDiff"
                        android:textStyle="italic|bold"
                        android:textSize="@dimen/edittext_textsize"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/edittext_textsize"
                    android:textStyle="italic"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/notesParaOne"
                    android:text="If taken daily, PrEP acts like a shield to protect you during sex."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/edittext_textsize"
                    android:textStyle="italic"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="48dp"
                    android:id="@+id/notesParaTwo"
                    android:text="If you were not on PrEP, your BlackBook score would be lower and you would be less protected."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>