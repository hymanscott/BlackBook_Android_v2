<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lynxstudy.lynx.TestingTestKitFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:id="@+id/scrollView3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="REQUEST A HOME TEST KIT"
                android:layout_margin="10dp"
                android:id="@+id/frag_title"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_color"
                android:id="@+id/title"
                android:text="Please confirm tests requested"
                android:layout_margin="10dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:id="@+id/requestHomeKit_checkboxLayout"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OraQuick Home HIV Test Kit"
                    android:id="@+id/oraQuickTestKit"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="40dp"
                    android:checked="true"
                    android:layout_centerHorizontal="true" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anal Swab"
                    android:id="@+id/analSwab"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:checked="true"
                    android:layout_marginLeft="40dp"
                    android:layout_centerHorizontal="true" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penile Swab"
                    android:checked="true"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/penileSwab"
                    android:layout_marginLeft="40dp"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:id="@+id/requestHomeKit_confirm"
                android:background="@drawable/lynx_button"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
