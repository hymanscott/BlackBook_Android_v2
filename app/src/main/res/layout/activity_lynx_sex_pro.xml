<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sexpro_main_parent"
    android:background="@color/white"
    tools:context="com.lynxstudy.lynx.LynxSexPro"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="?android:attr/actionBarSize"/>
    <!--Bottom Navigation-->
    <LinearLayout
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/bot_nav_bg"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/bot_nav_sexpro"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_sexpro_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_home_white" />

            <TextView
                android:id="@+id/bot_nav_sexpro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_diary"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_diary_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_diary" />

            <TextView
                android:id="@+id/bot_nav_diary_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_testing"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_testing_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_testing" />

            <TextView
                android:id="@+id/bot_nav_testing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testing" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_prep"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_prep_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_prep" />

            <TextView
                android:id="@+id/bot_nav_prep_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrEP" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bot_nav_chat"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/bot_nav_chat_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nav_icon_chat" />

            <TextView
                android:id="@+id/bot_nav_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>