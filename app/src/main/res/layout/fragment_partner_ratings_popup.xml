<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/popup"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg_white"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.aptmobility.lynx.CustomTextView
        custom:fontAssetName="RobotoSlabRegular.ttf"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You can rate your partners using seven rating categories. The first category will always be 'Overall', but you can configure the labels for ratings categories 2 through 7 with any text (up to 15 characters)" />
    <com.aptmobility.lynx.CustomTextView
        custom:fontAssetName="RobotoSlabRegular.ttf"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is a global setting for all partners in your partner list. If you change any category label, all partner ratings numbers previously set for that same category will be shown with the new category label." />


    <com.aptmobility.lynx.CustomButtonView
        style="@style/Phastt.button"
        custom:fontAssetName="RobotoSlabRegular.ttf"
        android:id="@+id/close"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAllCaps="false"
        android:background="@drawable/phastt_button"
        android:textColor="@color/white"
        android:text="Close" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
