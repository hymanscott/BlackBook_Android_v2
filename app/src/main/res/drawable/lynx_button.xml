<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_theme"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp"
                />
            <stroke android:width=".3dp" android:color="@color/blue_theme"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/blue_theme">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_boxes"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp"
                />
            <stroke android:width=".3dp" android:color="@color/blue_boxes"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_theme"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="15dp"
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp"
                />
            <stroke android:width=".3dp" android:color="@color/blue_theme"/>
        </shape>
    </item>
</selector>