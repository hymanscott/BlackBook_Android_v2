        <item name="android:popupMenuStyle">@style/PopupMenu.Phastt_tabs</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Phastt_tabs</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Phastt_tabs</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Phastt_tabs</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Phastt_tabs</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_phastt_tabs</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_phastt_tabs</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Phastt_tabs</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Phastt_tabs</item>
        <item name="android:buttonStyle">@style/Phastt.button</item>
        <item name="android:radioButtonStyle">@style/Phastt.Radiobutton</item>
        <item name="android:checkboxStyle">@style/Phastt.CheckBox</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/apptheme_btn_radio_holo_light</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textColor">#727272</item>
    </style>

    <style name="SpinnerItemTheme"
        parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#727272</item>
    </style>
    <style name="PasscodeInputItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasscodeKeyboardButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textColor">#FF464646</item>-->
        <item name="android:textColor">#727272</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/passcode_keyboard_button</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">38dp</item>
    </style>
    <style name="Theme.Phastt_tabs" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_phastt_tabs</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Phastt_tabs</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Phastt_tabs</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Phastt_tabs</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Phastt_tabs</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Phastt_tabs</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_phastt_tabs</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_phastt_tabs</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Phastt_tabs</item>


    </style>

    <style name="ActionBar.Solid.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_phastt_tabs</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Phastt_tabs</item>
        <item name="android:background">@drawable/ab_solid_phastt_tabs</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_phastt_tabs</item>
    </style>

    <style name="ActionBar.Transparent.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!--<item name="android:background">@drawable/ab_transparent_phastt_tabs</item>-->
        <item name="android:background">@color/apptheme_color</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Phastt_tabs</item>

    </style>

    <style name="ActionBarTabTextStyle.Phastt_tabs" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>

    <style name="PopupMenu.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_phastt_tabs</item>
    </style>

    <style name="DropDownListView.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_phastt_tabs</item>
    </style>

    <style name="ActionBarTabStyle.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_phastt_tabs</item>
    </style>

    <style name="DropDownNav.Phastt_tabs" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_phastt_tabs</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_phastt_tabs</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_phastt_tabs</item>

    </style>

    <style name="ProgressBar.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_phastt_tabs</item>

    </style>

    <style name="ActionButton.CloseMode.Phastt_tabs" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_phastt_tabs</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Phastt_tabs.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Phastt_tabs</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Phastt_tabs</item>
    </style>

    <style name="Phastt.button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item> -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/phastt_button</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">30dp</item>

    </style>
    <style name="Phastt.Radiobutton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>
    </style>

    <style name="Phastt.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box</item>
    </style>

    <!--<style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/main_bg</item>
        <item name="@android:textColor">@color/white</item>

    </style>-->

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SeekBarAppTheme" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
    </style>

</resources>
