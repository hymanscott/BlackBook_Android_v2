<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>

        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>

    <!-- Passcode Style -->
    <style name="PasscodeInputItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasscodeKeyboardButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textColor">#FF464646</item>-->
        <item name="android:textColor">#727272</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/passcode_keyboard_button</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tab Layout Tab Style -->
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Rating Bar -->
    <style name="CustomRatingBar" parent="@android:style/Widget.Holo.RatingBar.Indicator" >
    <item name="android:numStars">5</item>
    <item name="android:rating">4.5</item>
    <item name="android:stepSize">0.5</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingBottom">44dip</item>
    <item name="android:layout_marginLeft">4dip</item>
    <item name="android:layout_marginTop">4dip</item>
    </style>

    <style name="SeekBarAppTheme" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <!--Caldroid Styles-->
    <style name="CaldroidDefaultDark" parent="CaldroidDefault">
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthName</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridView</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultDarkNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkSquareCell</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultRightButton</item>
    </style>

    <style name="CaldroidDefaultDarkMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>
    <style name="CaldroidDefaultDarkGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/white</item>
    </style>
    <style name="CaldroidDefaultDarkCell" parent="CaldroidDefaultCell">
        <!--<item name="android:textColor">@color/text_color</item>-->
    </style>
    <style name="CaldroidDefaultDarkNormalCell" parent="CaldroidDefaultDarkCell">
        <item name="android:padding">0dp</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="CaldroidDefaultDarkSquareCell" parent="CaldroidDefaultDarkCell">

    </style>

    <style name="CaldroidDefaultArrowButton">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <!--<item name="android:paddingBottom">8dp</item>-->
        <!--<item name="android:paddingTop">8dp</item>-->
    </style>

    <style name="CaldroidDefaultLeftButton" parent="CaldroidDefaultArrowButton">
        <item name="android:background">@drawable/calendar_left</item>
    </style>
    <style name="CaldroidDefaultRightButton" parent="CaldroidDefaultArrowButton">
        <item name="android:background">@drawable/calendar_right</item>
    </style>
</resources>
